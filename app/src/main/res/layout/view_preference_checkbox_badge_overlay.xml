<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/badge_background"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_marginStart="-32dp"
        android:src="@drawable/bg_settings_badge"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorSecondaryContainer"
        android:contentDescription="@string/setup_feature_requires_additional_setup_x" />

    <ImageView
        android:id="@+id/badge_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="4dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_cellphone_cog_24"
        app:layout_constraintBottom_toBottomOf="@id/badge_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/badge_background"
        app:tint="?colorOnSecondaryContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>